                       @foreach (var giaphu in item.BangGiaCT)
                       {
                           <tr>
                               <td>@giaphu.Ten</td>
                               <td>@giaphu.Price.ToMoneyStr()</td>
                           </tr>
                       }
                   </table>*@
               }
            </td>
            <td>@item.ProductCat.Name</td>
            <td>
                <a class="img-popup" href="@item.ThumbnailImage">
                    <img src="@item.ThumbnailImage" width="50px;" />
                </a>
            </td>
            <td>@item.ProductCat.Quan.TenQuan</td>
            @*<td>

                @if (item.Hot)
                {
                    <button class="btn btn-default btn-circle waves-effect waves-circle waves-float" onclick="clsProduct.fnSetMainProduct(@item.Id,$(this),'hot')"><i class="fa fa-check"></i></button>
                }
                else
                {
                    <button class="btn btn-default btn-circle waves-effect waves-circle waves-float" onclick="clsProduct.fnSetMainProduct(@item.Id,$(this),'hot')"><i class="fa fa-circle-o"></i></button>
                }
            </td>
            <td>
                @if (item.New)
                {
                    <button class="btn btn-default btn-circle waves-effect waves-circle waves-float" onclick="clsProduct.fnSetMainProduct(@item.Id,$(this),'new')"><i class="fa fa-check"></i></button>
                }
                else
                {
                    <button class="btn btn-default btn-circle waves-effect waves-circle waves-float" onclick="clsProduct.fnSetMainProduct(@item.Id,$(this),'new')"><i class="fa fa-circle-o"></i></button>
                }
            </td>
            <td>
                @if (item.IsGiamGia)
                {
                    <button class="btn btn-default btn-circle waves-effect waves-circle waves-float" onclick="clsProduct.fnSetMainProduct(@item.Id,$(this),'giam_gia')"><i class="fa fa-check"></i></button>
                }
                else
