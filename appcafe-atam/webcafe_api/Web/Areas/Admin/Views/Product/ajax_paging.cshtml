@model VD.Data.Paging.PG<VD.Data.Entity.MF.Product>

@if (Model.L.Any())
{

    foreach (var item in Model.L)
    {

        <tr>
            <td>
                <input type="checkbox" class="cb_item" value="@item.Id" />
            </td>
            <td>
                <a class="btn btn-default btn-xs waves-effect" onclick="clsProduct.fnShowEdit(@item.Id,$(this))">@item.Id</a>
            </td>
            <td>@item.ProductName</td>
            <td>
               @item.Price.ToMoneyStr()
               @if (item.SoLuongGia > 0)
               {
                   <br/>
                   <code>@item.SoLuongGia Giá phụ</code>
