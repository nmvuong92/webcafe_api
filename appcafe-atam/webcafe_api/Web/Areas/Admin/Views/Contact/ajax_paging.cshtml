@using VD.Data.Entity;
@using VD.Data.Repository;
@model VD.Data.Paging.PG<VD.Data.Entity.MF.Contact>

@if (Model.L.Any())
{

    foreach (var item in Model.L)
    {

        <tr>
          
            <td>
                <input type="checkbox" class="cb_item" value="@item.Id" />
            </td>
            <td>@item.Id</td>
            <td>@item.CreatedDate.XuatDateTime()</td>
            <td>@item.TieuDe</td>
            <td>@item.HoTen</td>
            <td>@item.DiaChi</td>
            <td>@item.SDT</td>
            <td>@item.Email</td>
            <td>
                @if (item.KetQuaGuiMail == true)
                {
                    <span><i class="fa fa-check"></i></span>
                }
                else
                {
                    <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                }
            </td>
            <td>@Html.Raw(item.ContactStatus.NameHtml)</td>
          
            @*<td>@item.Role.Name<</td>*@
            <td>

                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle btn-xs" type="button" data-toggle="dropdown">
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a onclick="clsUsers.fnShowView(@item.Id,$(this))"><i class="fa fa-eye"></i> View</a></li>
                        <li><a onclick="clsUsers.fnShowEdit(@item.Id,$(this))"><i class="fa fa-pencil"></i> Edit</a></li>
                        <li><a onclick="clsUsers.fnDelete(@item.Id,$(this))"><i class="fa fa-remove"></i> Delete</a></li>
                    </ul>
                </div>
               
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="100%" class="nodata">Empty</td>
    </tr>
}
<tr class="trfooter">
    <td colspan="100%">
        @Html.Raw(Model.thongtinphantrang)
    </td>
</tr>

