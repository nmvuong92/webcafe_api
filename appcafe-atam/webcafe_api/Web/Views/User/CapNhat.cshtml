@model Web.ViewModels.BQC.CapNhatUserVM
@{
    ViewBag.Title = "Cập nhật thông tin cá nhân";
    Layout = null;
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">@ViewBag.Title</h4>
</div>

@using (Ajax.BeginForm("CapNhatProccess", "User", new AjaxOptions()
{
    OnSuccess = "clsUser.fnCapNhatThongTinSuccess"
},new{@autocomplete="off"}))
{
    <div class="modal-body">
        <div style="color:red;">@Html.ValidationSummary(false)</div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.Username), @autocomplete = "off", @disabled = "disabled" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Fullname, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.Fullname), @autocomplete = "off" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.Phone), @autocomplete = "off" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = Html.DisplayNameFor(n => n.Address), @autocomplete = "off"})
        </div>
     
    </div>
    <div class="modal-footer">
        <input type="submit" name="login-submit" id="login-submit" class="form-control btn btn-primary" value="Lưu">
    </div>
}
